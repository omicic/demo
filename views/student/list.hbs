<h3><a class="btn btn-secondary" href="/student"> Create New </a> Student List</h3>
<table class="table table-stiped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
        </tr>

    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/student/{{this.id}}" class="btn btn-sm btn-primary">Edit</a>
            </td>
            <td>
                <a onClick="return confirm('Are you sure you want to delete this record?')"
                    href="/student/delete/{{this.id}}" class="btn btn-sm btn-primary">Delete</a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>